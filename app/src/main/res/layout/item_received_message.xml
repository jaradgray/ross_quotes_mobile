<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <!-- Contact and message container -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_received_message_iv_avatar"
                android:layout_width="@dimen/avatar_size_small"
                android:layout_height="@dimen/avatar_size_small"
                android:layout_marginEnd="8dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/item_received_message_tv_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tv_contact_name"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/item_received_message_iv_avatar"/>

            <TextView
                android:id="@+id/item_received_message_tv_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tv_message_text"
                android:layout_below="@id/item_received_message_tv_contact_name"
                android:layout_toEndOf="@id/item_received_message_iv_avatar"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_received_message_tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="tv_contact_name"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>