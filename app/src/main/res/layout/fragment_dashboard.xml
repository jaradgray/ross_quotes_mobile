<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/holo_blue_light">

    <Button
        android:id="@+id/fragment_dashboard_b_recent_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recent Messages" />

    <Button
        android:id="@+id/fragment_dashboard_b_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacts" />

    <Button
        android:id="@+id/fragment_dashboard_b_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings" />

    <Button
        android:id="@+id/fragment_dashboard_b_set_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Alarm" />

</LinearLayout>